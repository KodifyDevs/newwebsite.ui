---
import {
  Hero,
  WhoWeAre,
  Services as ServicesContainer,
  OurWork,
  WeAreWhatYouNeed,
  OurClients,
} from "@containers/index";
import Card from "@components/Card";

import MainLayout from "../layouts/MainLayout.astro";
import "../styles/globals.css";

import {
  cardData,
  OurClientsData,
  ourWorkData,
  servicesData,
  weAreWhatYouNeedData,
} from "@constants/data";

const title = "Kodify";
---

<MainLayout title={title}>
  <Hero client:only="react" />
  <WhoWeAre client:only="react" />
  <Card cardData={cardData} client:only="react" />
  <ServicesContainer packagesData={servicesData} client:only="react" />
  <OurClients ourWorkData={OurClientsData} client:only="react" />
  <OurWork ourWorkData={ourWorkData} client:only="react" />
  <WeAreWhatYouNeed
    weAreWhatYouNeedData={weAreWhatYouNeedData}
    client:only="react"
  />
</MainLayout>
